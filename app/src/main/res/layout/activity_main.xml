<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MonitorActivity">
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_begin="176dp" />

  <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Hello World!"
      android:id="@+id/district_spinner"
      android:layout_margin="10dp"
      app:layout_constraintEnd_toStartOf="@+id/guideline"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toStartOf="@+id/guideline"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Spinner
      android:layout_width="0dp"
      android:id="@+id/district_txt"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      app:layout_constraintStart_toStartOf="@+id/guideline"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toStartOf="@+id/guideline"
      app:layout_constraintTop_toTopOf="parent"
      />
  <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Hello World!"
      android:id="@+id/block_txt"
      android:layout_margin="10dp"
      app:layout_constraintEnd_toStartOf="@+id/guideline"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toStartOf="@+id/guideline"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/district_txt" />


  <Spinner
      android:layout_width="0dp"
      android:id="@+id/block_spinner"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:prompt="tojjjjj"
      app:layout_constraintTop_toBottomOf="@id/district_spinner"
      app:layout_constraintStart_toStartOf="@+id/guideline"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toStartOf="@+id/guideline"
      />



</androidx.constraintlayout.widget.ConstraintLayout>